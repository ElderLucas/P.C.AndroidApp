<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/geral_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/paroquia_item_margin"
        android:layout_marginRight="@dimen/paroquia_item_margin"
        android:layout_marginTop="@dimen/paroquia_item_margin"
        android:layout_marginBottom="@dimen/paroquia_item_margin"
        android:background="@drawable/bg_parent_rouded_corner_paroquia"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paroquia_item_padding_top_bottom"
        android:paddingTop="@dimen/paroquia_item_padding_top_bottom" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/paroquia_item_paroquia_icon"
            android:layout_height="@dimen/paroquia_layout_paroquia_height"
            android:layout_marginLeft="@dimen/paroquia_item_paroquia_icon_margin"
            android:layout_marginRight="@dimen/paroquia_item_paroquia_icon_margin"
            android:src="@drawable/ic_aparecidadonorte"
            android:id="@+id/tabParish_list_item_icon"

            />

        <!-- Parish Name and Address -->
        <LinearLayout
            android:layout_height="@dimen/paroquia_layout_paroquia_height"
            android:layout_width="241dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabParish_list_item_ParishName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:layout_weight="2"
                android:text="Sagrada FamÃ­lia"/>

            <TextView
                android:id="@+id/tabParish_list_item_ParishAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/colorFirstText"
                android:textSize="13sp"
                android:text="Av. Monte das Oliveiras"/>
        </LinearLayout>

        <!-- Parish Name and Address -->
        <LinearLayout
            android:layout_height="@dimen/paroquia_layout_paroquia_height"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tabParish_list_item_icon_calice"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/paroquia_item_iconsize"
                android:layout_weight="2"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_calice"/>

            <ImageView
                android:id="@+id/tabParish_list_item_icon_calice2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/paroquia_item_iconsize"
                android:layout_weight="2"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_calice"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
