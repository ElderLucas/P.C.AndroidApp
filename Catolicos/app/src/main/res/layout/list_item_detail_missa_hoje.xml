<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="5dp"
    android:orientation="horizontal">

    <!-- Atividades dos dia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:elevation="4dp"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:paddingLeft="40dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="left"
                android:id="@+id/detailview_dia_semana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Hoje, 15 de agosto"
                android:textColor="@color/colorSecText"
                android:textSize="15sp"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_gravity="left"
                android:id="@+id/detailview_next_missa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="7:00"
                android:textColor="@color/colorFirstText"
                android:textSize="45dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_gravity="left"
                android:id="@+id/detailview_others_missa"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:fontFamily="sans-serif-light"
                android:text="07:00, 09:00 e 19:00"
                android:textColor="@color/colorSecText"
                android:textAppearance="?android:textAppearanceSmall"
                android:paddingTop="8dp"/>

        </LinearLayout>

        <!-- Atividades dos dia -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailview_growcalice"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="8dp"
                android:layout_height="94dp"
                android:src="@drawable/grow_calice"/>

            <TextView
                android:id="@+id/detailview_today_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/colorFirstText"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="Missa" />
            </LinearLayout>



    </LinearLayout>
</LinearLayout>
